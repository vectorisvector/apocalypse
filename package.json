    "start": "next start",
    "lint": "next lint",
    "launch": "pnpm run localnode && next dev -p 9000",
    "worldgen": "obelisk schemagen obelisk.config.ts",
    "localnet": "sh dev.sh localnet",
    "devnet": "sh dev.sh devnet",
    "testnet": "sh dev.sh testnet",
    "mainnet": "sh dev.sh mainnet",
    "local-faucet": "obelisk faucet --network localnet",
    "dev-faucet": "obelisk faucet --network devnet",
    "test-faucet": "obelisk faucet --network testnet",
    "main-faucet": "obelisk faucet --network mainnet",
    "generateAccount": "ts-node scripts/generateAccount.ts",
    "localnode:docker": "docker-compose up -d",
    "test": "ts-node src/utils/test.ts"
  },
